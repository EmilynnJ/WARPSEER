# WORKING DOCKERFILE - BACKEND ONLY FOR NOW
FROM python:3.11

WORKDIR /app

# Copy and install Python deps
COPY apps/backend/requirements.docker.txt requirements.txt
RUN pip install -r requirements.txt

# Copy backend
COPY apps/backend .

# Expose port
EXPOSE 8080

# Run backend on port 8080
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080"]