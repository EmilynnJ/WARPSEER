# SIMPLE BACKEND DOCKERFILE THAT WORKS
FROM python:3.11

WORKDIR /app

# Install dependencies
COPY apps/backend/requirements.docker.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend code
COPY apps/backend .

# Run the app
EXPOSE 8000
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]